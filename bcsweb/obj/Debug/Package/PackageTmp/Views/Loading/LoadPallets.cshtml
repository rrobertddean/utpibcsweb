<script type="text/javascript">

    $(document).ready(function () {
        var baseUrl = getbaseUrl();

        $('html').focus();

        $('html').bind('keypress', function (e) {
            //Loading Hatch Palletized 
            if (e.keyCode == 49) {
                window.location.href = baseUrl + "loading/HatchLoadingPalletized";
            }
            //Loading Hatch Breakbulk
            else if (e.keyCode == 50) {
                window.location.href = baseUrl + "loading/HatchLoadingBreakBulk";
            } 
            //Loading Reefer Van
            else if (e.keyCode == 51) {
                window.location.href = baseUrl + "loading/Reefervan";
            } 
            //Loading Whole Reefer Van
            else if (e.keyCode == 52) {
                window.location.href = baseUrl + "loading/LoadWholeReeferVan";
            } else if (e.keyCode == 53) {
                window.location.href = baseUrl + "home/loading";
            }

        })
    })


</script>