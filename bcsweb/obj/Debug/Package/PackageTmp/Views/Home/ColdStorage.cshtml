<table style="width:100%;">
    <tr>
        <td><b>Cold Storage</b></td>
    </tr>

     <tr style="width:100%;height:3em;">
        <td>
            <button style="width:100%;height:3em;" id="btnInsertPallet">Insert Pallet</button>
        </td>
    </tr>
        
     <tr style="width:100%;height:3em;">
        <td>
            <button style="width:100%;height:3em;" id="btnReleasePallet">Release Pallet</button>
        </td>
    </tr>


     <tr>
        <td><b>Press: </b></td>
    </tr>

    <tr>
        <td><b>1 - Insert Pallet</b></td>
    </tr>

    <tr>
        <td><b>2 - Release Pallet</b></td>
    </tr>

    <tr>
        <td><b>3 - Return</b></td>
    </tr>


</table>


<script type="text/javascript">
    $(document).ready(function () {
        var baseUrl = getbaseUrl();

        $('body').focus();

        $('body').bind('keypress', function (e) {
            if (e.keyCode == 49) {
                window.location.href = baseUrl + "coldstorage/insertpallet";
            }
            if (e.keyCode == 50) {
                window.location.href = baseUrl + "coldstorage/releasepallet";
            }
            if (e.keyCode == 51) {
                window.location.href = baseUrl + "home/";
            }
        })


        $('#btnInsertPallet').click(function () {
            window.location.href = baseUrl + "coldstorage/insertpallet";
        })

        $('#btnReleasePallet').click(function () {
            window.location.href = baseUrl + "coldstorage/releasepallet";
        })


    })
</script>
